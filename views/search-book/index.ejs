<div class="container-fluid">
    <% if (alert) { %>
      <% if (alert.message != '') { %>
        <div class="alert alert-<%= alert.status %> alert-dismissible fade show" role="alert">
          <%- alert.message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    <% } %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-4">
          <div class="row">
            <div class="col-md-6 fw-semibold">Cari Buku</div>
          </div>
        </h5>
        <div class="table-responsive">
          <table class="table text-nowrap mb-0 align-middle display" id="dataTable">
            <thead>
              <tr>
                <th>#</th>
                <th>Opsi</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i = 0; i < books.length; i++) { %>
                <tr>
                  <td>
                    <div class="row">
                      <div class="col-sm-2">
                        <a href="/<%= books[i].image %>" target="_blank"><img src="/<%= books[i].image %>" class="img-thumbnail"/></a>
                      </div>
                      <div class="col-sm-10">
                        <h5 class="fw-semibold"><%= books[i].title %></h5>
                        <div class="text-muted">Author: <%= books[i].author %></div>
                        <div class="text-muted">Tahun Publikasi: <%= books[i].publication_year %></div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <a href="/search-book/<%= books[i].id %>/loan" class="btn btn-info btn-sm">Pinjam</a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>